<?xml version="1.0" encoding="utf-8"?>
<GridView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myGridView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_margin="14dp"
    android:orientation="vertical"
    tools:context=".Mediatheque">

    <ImageView
        android:id="@+id/aquaman"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:src="@drawable/aquaman" />

    <ImageView
        android:id="@+id/ironman"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:src="@drawable/ironman" />

    <ImageView
        android:id="@+id/badboys"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/badboys" />

    <ImageView
        android:id="@+id/deadpool"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/deadpool" />

</GridView>